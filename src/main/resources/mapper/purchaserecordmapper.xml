<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.smartairportsystem.mapper.purchaserecordmapper">
    <resultMap id="BaseResultMap" type="com.example.smartairportsystem.entity.purchaserecord">
    </resultMap>
    <insert id="addNewRecord" parameterType="com.example.smartairportsystem.entity.purchaserecord">
        insert into purchaserecord(personid,ticketid,purchasetime,seatinfo) values(#{personid},#{ticketid},#{purchasetime},#{seatinfo})
    </insert>

    <delete id="removeOldRecord">
        delete from purchaserecord where orderid = #{orderid}
    </delete>

    <update id="selectSeatForOrderid">
        update purchaserecord set seatinfo = #{seatinfo} where orderid = #{orderid}
    </update>

    <select id="getRecordByID" resultType="com.example.smartairportsystem.entity.purchaserecord">
        select * from purchaserecord where orderid = #{orderid}
    </select>

    <select id="getRecordByCombine" resultType="com.example.smartairportsystem.entity.purchaserecord">
        select * from purchaserecord where ticketid = #{ticketid} and seatinfo = #{seatinfo}
    </select>

    <select id="getRecordByTicketid" resultType="com.example.smartairportsystem.entity.purchaserecord">
        select * from purchaserecord where ticketid = #{ticketid}
    </select>

    <select id="getCountByTicketid" resultType="Integer">
        select count(*) from purchaserecord where ticketid = #{ticketid}
    </select>
</mapper>