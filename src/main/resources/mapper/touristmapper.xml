<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.smartairportsystem.mapper.touristmapper">
    <resultMap id="BaseResultMap" type="com.example.smartairportsystem.entity.tourist">
    </resultMap>
    <insert id="logupNewTourist" parameterType="com.example.smartairportsystem.entity.tourist">
        insert into tourist(email,passwords,salt,vip) values(#{email},sha1(#{passwords}),#{salt},#{vip})
    </insert>

    <update id="updatePassword">
        update tourist set passwords = sha1(#{newpasswords}) where touristid = #{touristid}
    </update>

    <select id="getTouristByEmail" resultType="com.example.smartairportsystem.entity.tourist">
        select * from tourist where email = #{email}
    </select>

    <select id="getTouristByID" resultType="com.example.smartairportsystem.entity.tourist">
        select * from tourist where touristid = #{touristid}
    </select>
</mapper>